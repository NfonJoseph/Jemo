DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/jemo?schema=public
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Storage Configuration
# STORAGE_PROVIDER: "local" for filesystem (default in development), "r2" for Cloudflare R2 (production)
STORAGE_PROVIDER=local

# Cloudflare R2 Configuration (required when STORAGE_PROVIDER=r2)
# Get these from your Cloudflare dashboard: R2 > Overview > Manage R2 API Tokens
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_BUCKET=your-bucket-name
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key

# API Base URL (used for local storage signed URLs)
API_BASE_URL=http://localhost:3001

# ===========================================
# My-CoolPay Payment Gateway Configuration
# ===========================================
# Get your credentials from the My-CoolPay merchant dashboard
# https://my-coolpay.com

# Mode: "test" for sandbox, "live" for production
MYCOOLPAY_MODE=test

# API Base URL (usually https://my-coolpay.com/api)
MYCOOLPAY_BASE_URL=https://my-coolpay.com/api

# Your merchant public key (used in API URL path)
MYCOOLPAY_PUBLIC_KEY=your-public-key

# Your merchant private/secret key (used for authentication)
MYCOOLPAY_PRIVATE_KEY=your-private-key

# Webhook secret for verifying callbacks (optional but recommended)
MYCOOLPAY_WEBHOOK_SECRET=your-webhook-secret
